root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[{CMakeLists.txt}]
indent_size = 2

[*.{cpp}]
indent_size = 2
max_line_length = 100

# Headers
[*.{h,hpp}]
indent_size = 2

[*.md]
max_line_length = 80
trim_trailing_whitespace = false
